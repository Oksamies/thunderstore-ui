{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "noEmit": true,
    "isolatedModules": true,
    "allowJs": false,
    "checkJs": false,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "typeRoots": ["../../types", "./node_modules/@types"],
    "module": "esnext"
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "../../types/**/*.d.ts"],
  "exclude": ["node_modules"]
}
